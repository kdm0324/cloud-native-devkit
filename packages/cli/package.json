{
  "name": "@local-dev/cli",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "local-dev": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "build:release": "tsup src/index.ts --format cjs --bundle --platform node --target node18 --out-dir dist-release --clean"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.0.0",
    "commander": "^12.1.0",
    "execa": "^9.5.0",
    "@local-dev/core": "0.1.0"
  },
  "devDependencies": {
    "tsx": "^4.19.2",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0"
  }
}